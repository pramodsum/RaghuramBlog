{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="post-excerpt">
        <p>{{content words="100"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{#if tags}}<i class="ion-pricetag"></i> {{tags}}{{/if}}
        <i class="ion-chatbubble"></i> <a href="{{url}}#disqus_thread">Leave a Comment</a>
    </footer>
</article>
{{/foreach}}
